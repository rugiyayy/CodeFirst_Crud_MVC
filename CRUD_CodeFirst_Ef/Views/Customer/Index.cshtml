@model CustomerIndexVM

<div style="margin-left:50px" class="d-flex justify-content-between align-items-center">
    <h1 style="text-align:center;margin: auto;padding: 50px 0;">
        Customer
        <a asp-controller="Customer" asp-action="Add" class="btn btn-success">
            <span>
                Add
            </span>
            <i class="fa-solid fa-plus"></i>
        </a>
    </h1>
</div>

<div style="display:flex;flex-wrap:wrap; gap:50px; margin-left:50px">
@foreach (var customer in Model.Customers)
{
    <div class="card" style="width: 25rem;">
        <div class="card-body">
                <h5 class="card-title"><b>First Name:</b> @customer.FirstName</h5>
                <h5 class="card-title"><b>Last Name:</b>@customer.LastName</h5>
                <h5 class="card-title"> <b>Email:</b> @customer.Email</h5>

            <a asp-controller="Customer" asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-danger">Delete</a>
                <a asp-controller="Customer" asp-action="Update" asp-route-id="@customer.Id" class="btn btn-warning">Update</a>
        </div>
    </div>
}

</div>
